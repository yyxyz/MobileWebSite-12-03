@{  
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        html {
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <title></title>
    <link href="~/Kendo/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Kendo/styles/kendo.rtl.min.css" rel="stylesheet" />
    <link href="~/Kendo/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Kendo/styles/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="~/Kendo/styles/kendo.dataviz.default.min.css" rel="stylesheet" />

    @* <script src="~/Scripts/js/kendo.all.min.js"></script>*@
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/kendo.all.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <link href="~/Kendo/styles/kendo.mobile.all.min.css" rel="stylesheet" />

    <script>
        var navbar;
        var app;
        $(function () {
            app = new kendo.mobile.Application(document.body);
        });

        window.onload = function () {
            //alert("onload");
            var height1 = document.body.scrollHeight;
            $("#myIframe").attr("Height", height1 - 30);
            $("#myIframe").attr("src", "/../CpcMainHome/CpcMainHome");
            navbar = app.view()
                    .header
                    .find(".km-navbar")
                    .data("kendoMobileNavBar");
            // alert(document.getElementById("drawer-myIframe").g6etAttribute("data-title"));
            //$("#drawer-myIframe").attr("data-title", "发出的订单（已完成）");
            //$("#myiframe").kendoAttribution({ data-title: "hehe"  });
        }
        function myFunction(x) {
            //var height1 = document.body.scrollHeight;
            //alert("haha");
            //switch里面对应相应的更改显示的页面url地址，自行修改指向自己的URL地址自行配置参数
            //  $("#myIframe").attr("Height", height1 - 30);
            switch (x) {
                case "receiveorder":
                    $("#myIframe").attr("src", "/../OrderDemo/Index?category=1");
                    //$("#drawer-myIframe").data("kendoMobileView").title("hehe");
                    //var index = new new kendo.View('<span>Hello World!</span>');
                    //index.render($('#drawer-sendtranslation'));
                    // var app=new kendo.mobile.Application(document.body);
                    navbar.title("收到的订单");
                    break;
                case "sendorder":
                    $("#myIframe").attr("src", "/../OrderDemo/Index?category=0 ");
                    navbar.title("发出的订单");
                    break;
                case "sendtranslation":
                    $("#myIframe").attr("src", "/../Transportation/Index?category=1");
                    navbar.title("发货单列表");
                    break;
                case "receivetranslation":
                    $("#myIframe").attr("src", "/../Transportation/Index?category=0");
                    navbar.title("收货单列表");
                    break;
                case "home":
                    $("#myIframe").attr("src", "/../CpcMainHome/CpcMainHome");
                    navbar.title('我的首页');
                    break;
                case "send":
                    $("#myIframe").attr("src", "/../Transportation/AddTransportList");
                    navbar.title('我要发货');
                    break;
            }
            //$("#myiframe").attr("src", "http://www.w3school.com.cn");
        }
    </script>
</head>
<body>
    <div data-role="view" id="drawer-myIframe" data-layout="drawer-layout"  data-title="@ViewBag.Name" >
  <iframe id="myIframe" src=" " height ="100%" width="100%" frameborder="no" border="0" marginwidth="0" marginheight="0"></iframe>
</div>

<div data-role="view" id="drawer-sendorder" data-layout="drawer-layout" data-title="发出的订单" >
    <ul data-role="listview" class="inboxList">
		<li data-icon="star"onclick="myFunction('sentorderok')"><a href="#drawer-myIframe" data-transition="none">已完成订单</a></li>  
		<li data-icon="star"onclick="myFunction('sentordernot')"><a href="#drawer-myIframe" data-transition="none">未完成的订单</a></li>		
	   
    </ul>
</div>

<div data-role="view" id="drawer-receiveorder" data-layout="drawer-layout" data-title="接受的订单">
    <ul data-role="listview" class="inboxList">
		<li data-icon="star"onclick="myFunction('receiveorderok')"><a href="#drawer-myIframe" data-transition="none">已完成订单</a></li>  
		<li data-icon="star"onclick="myFunction('receiveordernotok')"><a href="#drawer-myIframe" data-transition="none">未完成的订单</a></li>		
	   
    </ul>
</div>

<div data-role="view" id="drawer-sendtranslation" data-layout="drawer-layout" data-title="发货物流信息">
    <ul data-role="listview" class="inboxList">
		<li data-icon="star"onclick="myFunction('sendtranslationok')"><a href="#drawer-myIframe" data-transition="none">对方已收货</a></li>  
		<li data-icon="star"onclick="myFunction('sendtranslationnotok')"><a href="#drawer-myIframe" data-transition="none">对方未收货</a></li>		
	   
    </ul>
</div>

<div data-role="view" id="drawer-receivetranslation" data-layout="drawer-layout" data-title="收货物流信息">
    <ul data-role="listview" class="inboxList">
		<li data-icon="star"><a href="#drawer-myIframe" data-transition="none">我已收货</a></li>  
		<li data-icon="star"><a href="#drawer-myIframe" data-transition="none">我未收货</a></li>		   
    </ul>
</div>

<div data-role="drawer" id="my-drawer" style="width: 230px;  data-views="['drawer-myIframe', 'drawer-sendorder', 'drawer-sendordercomplete','drawer-sendordernotcomplete','drawer-receiveorder', 'drawer-receiveordercomplete','drawer-receiveordernotcomplete','drawer-sendtranslation','drawer-sendtranslationcompelete','drawer-sendtranslationnotcomplete','drawer-receivetranslation','drawer-receivetranslationcompelete','drawer-receivetranslationnotcomplete']">
    <ul data-role="listview" data-type="group" style="">
        <li>
            <ul>
                   <table width="223" border="0" >
                      <tr>
                        <td width="70" ><img src="/../CpcMain/get_Enlogo" width="70" height="70"  alt="" style="border-radius:10px"/></td>
                        <td width="122" height="70">
                            <h4 style="line-height:1px;margin-bottom:7px">用户ID:@ViewBag.ID</h4>
                            <h3 style="color:#808080;margin-top:1px">@ViewBag.Name</h3>                            
                        </td>
                      </tr>                  
                    </table>              
                <li data-icon="star"onclick="myFunction('home')"><a href="#drawer-myIframe" data-transition="none">回到首页</a></li>
                </ul>
        </li>
        <li>订单管理
            <ul>              
                <li data-icon="star"onclick="myFunction('sendorder')"><a href="#drawer-myIframe" data-transition="none">发出的订单</a></li>
                <li data-icon="compose"onclick="myFunction('receiveorder')"><a href="#drawer-myIframe" data-transition="none">接受的订单</a></li>               
            </ul>
        </li>
        <li>物流管理
            <ul>
                <li data-icon="sent"onclick="myFunction('send')"><a href="#drawer-myIframe" data-transition="none">我要发货</a></li>
                <li data-icon="sent"onclick="myFunction('sendtranslation')"><a href="#drawer-myIframe" data-transition="none">发货信息查看</a></li>
                <li data-icon="trash"onclick="myFunction('receivetranslation')"><a href="#drawer-myIframe" data-transition="none">收货信息查看</a></li>              
            </ul>
        </li> 
    </ul>
</div>

<div data-role="layout" data-id="drawer-layout">
    <header data-role="header">
        <div data-role="navbar" style="height:34px;font-size:small;padding-top:1px;background-color:#efeff4">
            <a data-role="button" data-rel="drawer" href="#my-drawer" data-icon="drawer-button" data-align="left"></a>
            <span data-role="view-title" ></span>           
            @*<a data-align="right" data-role="button" class="nav-button" href="#my-drawer">Index</a>*@
        </div>
    </header>
</div>

<script>
    // reset global drawer instance, for demo purposes
    kendo.mobile.ui.Drawer.current = null;
</script>

<style>
    .km-ios #my-drawer .km-content, .km-android #my-drawer .km-content, .km-blackberry #my-drawer .km-content,
    .km-ios #my-drawer .km-list > li, .km-android #my-drawer .km-list > li, .km-blackberry #my-drawer .km-list > li,
    .km-ios #my-drawer .km-listview-link > .km-icon, .km-android #my-drawer .km-listview-link > .km-icon, .km-blackberry #my-drawer .km-listview-link > .km-icon,
    .km-ios #my-drawer .km-list li > .km-icon, .km-android #my-drawer .km-list li > .km-icon, .km-blackberry #my-drawer .km-list li > .km-icon
    {
        background-color: #4e4e4e;
        color: #fff;
    }

    .km-ios #my-drawer
    {
        background-color: #f00;
        color: #fff;
    }
    #my-drawer .km-group-title {      
    color: rgb(0, 0, 0);
}

    .km-drawer-button:before, .km-drawer-button:after  { content: "\E077"; }
    .km-inbox:before, .km-inbox:after { content: "\E0B0"; }
    .km-sent:before, .km-sent:after { content: "\E0C6"; }
    .km-trash:before, .km-trash:after { content: "\E0C3"; }
    .km-spam:before, .km-spam:after { content: "\E0C5"; }
    .km-star:before, .km-star:after { content: "\E0D7"; }
    .km-settings:before, .km-settings:after { content: "\E0DA"; }
    .km-off:before, .km-off:after { content: "\E0B9"; }

    .inboxList
    {
        font-size: 2.8em;
    }

    .inboxList p,
    .inboxList h2,
    .inboxList h3
    {
        margin: 5px 2px;
    }

    .inboxList p,
    .inboxList h3
    {
        color: #777;
    }

    .inboxList h3.time
    {
        color: #369;
        float: left;
        margin-right: 10px;
    }

    #drawer-spam .spam
    {
        color: darkred;
        background: currentcolor;
        display: block;
        margin: 2em;
        font-size: 1.4em;
    }

    #drawer-spam .spam .km-text
    {
        color: white;
    }
</style>
<script>
