    <script>
        /*用于对form表单禁用按回车键搜索
        */
        $("#searchForm").keypress(function (e) {
            if (e.which == 13) {
                return false;
            }
        });

        String.prototype.GetValue = function (para) { //将url ？ 后面的链接以&符号进行分割
            var reg = new RegExp("(^|&)" + para + "=([^&]*)(&|$)");
            var r = this.substr(this.indexOf("\?") + 1).match(reg);
            if (r != null) return unescape(r[2]); return null;
        }
        var str = location.search;  //获取当前页面url？后面的数值
        str = decodeURI(str);   //对url进行解码
        //console.info("str = " + window.location.pathname + location.search)
        var category = str.GetValue("category");  //区分公司是否为接收方

        var searchValue = "发货";  //文本框中的输入的内容
        var isSearch = 0;  //用于判断是否在进行页面的搜索，0表示不是搜索状态， 1表示搜索状态

        searchValue = str.GetValue("searchValue");
        isSearch = str.GetValue("isSearch");

        if (isSearch == null) isSearch = 0;

        $("#searchbutton").click(function () {
            searchValue = document.getElementById("search_input").value;
            if (searchValue.length != 0) {
                isSearch = 1;
                //跳转到链接并对整个链接进行编码， searchValue 为文本框中输入的值
                location.replace(encodeURI(window.location.pathname + '?category=' + category
                    + '&searchValue=' + searchValue + '&isSearch=' + isSearch));
            } else {
                isSearch = 0;
            }
        });

        var TransportSource1 = new kendo.data.DataSource({
            transport: {
                read: {
                    type: "POST",
                    url: "/Transportation/GetTransportList",
                    data:
                                {
                                    // enterpriseID: 10001,
                                    category: category,
                                    //transportState: 0,
                                },
                    dataType: "json"
                }
            },
        });

        var TransportSource2 = new kendo.data.DataSource({
            transport: {
                read: {
                    type: "POST",
                    url: "/Transportation/GetTransportList",
                    data:
                        {
                            // enterpriseID: 10001,
                            category: category,
                            //transportState: 0,
                        },
                    dataType: "json"
                }
            },
            //data: TransportSource,
            filter: {
                // leave data items which are "Food" or "Tea"
                logic: "or",
                filters: [
                  {
                      field: "consignee",
                      operator: "contains",
                      value: searchValue
                  },
                  {
                      field: "status",
                      operator: "contains",
                      value: searchValue
                  },
                  {
                      field: "TransportNumber",
                      operator: "contains",
                      value: searchValue
                  }
                ]
            },
        });
