        //    //console.log(view[1].name); // displays "Ham"
        //    //return view.length;
        //    console.log(TransportSource2.total()); // displays "John Doe"
        //});

        var TransportSource;
        if (isSearch == 1) {
            TransportSource = TransportSource2;
        } else {
            TransportSource = TransportSource1;
        }



